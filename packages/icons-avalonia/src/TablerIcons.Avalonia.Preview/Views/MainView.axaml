<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:TablerIcons.Avalonia.Preview.ViewModels"
             xmlns:tia="using:TablerIcons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TablerIcons.Avalonia.Preview.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>

    <Grid>
        <ScrollViewer>
            <ListBox ItemsSource="{Binding Icons}">
                <ListBox.ItemTemplate >
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" x:DataType="vm:IconModel" Spacing="10">
                            <tia:TablerIcon Icon="{Binding Icon}"
                                            Size="40"
                                            Color="{Binding Color}"
                                            StrokeWidth="{Binding Stroke}"/>
                            <Image Width="40" Height="40">
                                <Image.Source>
                                    <tia:TablerIconSource Icon="{Binding Icon}"
                                                          Color="{Binding Color}"
                                                          StrokeWidth="{Binding Stroke}"/>
                                </Image.Source>
                            </Image>

                            <TextBlock Text="{Binding Name}"/>

                            <tia:TablerIcon Icon="IconAbc"
                                            Size="40"
                                            Color="Red"
                                            StrokeWidth="2"/>
                            <Image Width="40" Height="40">
                                <Image.Source>
                                    <tia:TablerIconSource Icon="Icon123"
                                                          Color="Green"
                                                          StrokeWidth="2"/>
                                </Image.Source>
                            </Image>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </Grid>
</UserControl>
