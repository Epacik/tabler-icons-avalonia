<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:TablerIcons.Avalonia.Preview.ViewModels"
             xmlns:ti="using:TablerIcons"
             xmlns:sys="using:System"
             xmlns:l="using:TablerIcons.Avalonia.Preview.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TablerIcons.Avalonia.Preview.Views.MainView"
             x:DataType="vm:MainViewModel"
             x:Name="_self">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>

    <Grid RowDefinitions="50,*,50">

        <Border Margin="10,5">
            <Grid ColumnDefinitions="*,5,140,5,140,5,140">
                <TextBox
                    FontSize="20"
                    Padding="40,5,5,5"
                    Text="{Binding SearchText}"/>
                <ti:TablerIcon 
                    Icon="IconSearch"
                    HorizontalAlignment="Left"
                    Margin="5"
                    x:Name="_icon"/>

                <ComboBox 
                    SelectedItem="{Binding StrokeWidth}"
                    Grid.Column="2"
                    SelectedIndex="4"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Padding="10,15,10,10">
                    <sys:Single>2.00</sys:Single>
                    <sys:Single>1.75</sys:Single>
                    <sys:Single>1.50</sys:Single>
                    <sys:Single>1.25</sys:Single>
                    <sys:Single>1.00</sys:Single>
                    <sys:Single>0.75</sys:Single>
                    <sys:Single>0.50</sys:Single>
                </ComboBox>
                
                <TextBlock 
                    Text="Stroke Width"
                    Grid.Column="2"
                    VerticalAlignment="Top"
                    FontSize="12"
                    Focusable="False"
                    IsEnabled="False"
                    Margin="5,2"/>
                
                <NumericUpDown 
                    Grid.Column="4"
                    Increment="5"
                    Maximum="200"
                    Minimum="10"
                    Padding="10,15,10,5"
                    Value="{Binding Width}"/>

                <TextBlock
                    Text="Width"
                    Grid.Column="4"
                    VerticalAlignment="Top"
                    FontSize="12"
                    Focusable="False"
                    IsEnabled="False"
                    Margin="5,2"/>

                <NumericUpDown
                    Grid.Column="6"
                    Increment="5"
                    Maximum="200"
                    Minimum="10"
                    Padding="10,15,10,5"
                    Value="{Binding Height}"/>

                <TextBlock
                    Text="Height"
                    Grid.Column="6"
                    VerticalAlignment="Top"
                    FontSize="12"
                    Focusable="False"
                    IsEnabled="False"
                    Margin="5,2"/>
                
            </Grid>
        </Border>
        
        <ScrollViewer Grid.Row="1">
            <ListBox ItemsSource="{Binding IconsView}">
                <ListBox.ItemTemplate >
                    <DataTemplate>
                        <StackPanel
                            x:DataType="vm:IconModel"
                            Spacing="10"
                            HorizontalAlignment="Center">
                            <ti:TablerIcon Icon="{Binding Icon}"
                                            Width="{Binding $parent[l:MainView].((vm:MainViewModel)DataContext).Width}"
                                            Height="{Binding $parent[l:MainView].((vm:MainViewModel)DataContext).Height}"
                                            StrokeWidth="{Binding $parent[l:MainView].((vm:MainViewModel)DataContext).StrokeWidth}">
                                <ti:TablerIcon.Brush>
                                    <RadialGradientBrush Center="50%,50%">
                                        <GradientStop Color="Red" Offset="0.1"/>
                                        <GradientStop Color="Green" Offset="0.5"/>
                                        <GradientStop Color="Blue" Offset="0.9"/>
                                    </RadialGradientBrush>
                                </ti:TablerIcon.Brush>
                            </ti:TablerIcon>


                            <TextBlock 
                                Text="{Binding Name}" 
                                HorizontalAlignment="Center" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel  />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ListBox>
        </ScrollViewer>

        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Spacing="10">
            <Button
                Content="{ti:TablerIcon IconChevronsLeft}"
                Command="{Binding GoToFirstPageCommand}"/>
            <Button
                Content="{ti:TablerIcon IconChevronLeft}"
                Command="{Binding GoToPreviousPageCommand}"/>
            
            <NumericUpDown 
                Minimum="1"
                Maximum="{Binding TotalPages}"
                Value="{Binding CurrentPage}"
                Height="20"
                ShowButtonSpinner="False"
                FormatString="0"
                VerticalAlignment="Center"/>

            <TextBlock 
                FontSize="20"
                VerticalAlignment="Center">
                <Run Text="/"/>
                <Run Text="{Binding TotalPages}"/>
            </TextBlock>
            
            <Button
                Content="{ti:TablerIcon IconChevronRight}"
                Command="{Binding GoToNextPageCommand}"/>
            <Button
                Content="{ti:TablerIcon IconChevronsRight}"
                Command="{Binding GoToLastPageCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
