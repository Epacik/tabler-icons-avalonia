<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:TablerIcons.Avalonia.Preview.ViewModels"
             xmlns:tia="using:TablerIcons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TablerIcons.Avalonia.Preview.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>

    <Grid RowDefinitions="50,*,50">

        <Border Margin="10,5">
            <Grid >
                <TextBox
                    FontSize="20"
                    Padding="40,5,5,5"
                    Text="{Binding SearchText}"/>
                <tia:TablerIcon 
                    Icon="IconSearch"
                    HorizontalAlignment="Left"
                    Margin="5"/>
                
            </Grid>
        </Border>
        
        <ScrollViewer Grid.Row="1">
            <ListBox ItemsSource="{Binding IconsView}">
                <ListBox.ItemTemplate >
                    <DataTemplate>
                        <StackPanel
                            x:DataType="vm:IconModel"
                            Spacing="10"
                            HorizontalAlignment="Center">
                            <tia:TablerIcon Icon="{Binding Icon}"
                                            Width="90"
                                            Height="90"
                                            StrokeWidth="2">
                                <tia:TablerIcon.Brush>
                                    <RadialGradientBrush Center="50%,50%">
                                        <GradientStop Color="Red" Offset="0.1"/>
                                        <GradientStop Color="Green" Offset="0.5"/>
                                        <GradientStop Color="Blue" Offset="0.9"/>
                                    </RadialGradientBrush>
                                </tia:TablerIcon.Brush>
                            </tia:TablerIcon>

                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel  />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ListBox>
        </ScrollViewer>

        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Spacing="10">
            <Button
                Content="{tia:TablerIcon IconChevronsLeft}"
                Command="{Binding GoToFirstPageCommand}"/>
            <Button
                Content="{tia:TablerIcon IconChevronLeft}"
                Command="{Binding GoToPreviousPageCommand}"/>
            
            <NumericUpDown 
                Minimum="1"
                Maximum="{Binding TotalPages}"
                Value="{Binding CurrentPage}"
                Height="20"
                ShowButtonSpinner="False"
                FormatString="0"
                VerticalAlignment="Center"/>

            <TextBlock 
                FontSize="20"
                VerticalAlignment="Center">
                <Run Text="/"/>
                <Run Text="{Binding TotalPages}"/>
            </TextBlock>
            
            <Button
                Content="{tia:TablerIcon IconChevronRight}"
                Command="{Binding GoToNextPageCommand}"/>
            <Button
                Content="{tia:TablerIcon IconChevronsRight}"
                Command="{Binding GoToLastPageCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
